<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/btthoat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/muiten" />
        <TextView
            android:id="@+id/titleText"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Thuê xe"
            android:layout_marginLeft="85dp"
            android:textColor="#FF7F00"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <!-- LinearLayout bao quanh toàn bộ nội dung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Car Image Section -->
            <ImageView
                android:id="@+id/carImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <!-- Thumbnail Images Section -->
            <LinearLayout
                android:id="@+id/thumbnailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/anh1"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_6" />

                <ImageView
                    android:id="@+id/anh2"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_7"
                    android:layout_marginStart="8dp" />

                <ImageView
                    android:id="@+id/anh3"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_8"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Car Information Section -->
            <TextView
                android:id="@+id/carName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                android:text="  VinFast VF 5"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/freeCharging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#ffa9a9"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:text=" Miễn phí giao xe trong ngày"
                android:textColor="#880E4F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/carPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  800.000 VNĐ/ngày"
                android:textColor="#00CC33"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Thông tin xe -->
            <LinearLayout
                android:id="@+id/carDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="#DDDDDD"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/scn"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:gravity="left"
                        android:text="5 chỗ ngồi"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/km"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="326km (NEDC)"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/std"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:gravity="left"
                        android:text="Số tự động"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tuikhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="6 túi khí"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/hp"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:gravity="left"
                        android:text="134HP"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/asuv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="A-SUV"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lit"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:gravity="left"
                        android:text="260L"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/ghdc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Giới hạn di chuyển: 300km/ngày"
                        android:textColor="#444444"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Các tiện nghi khác -->
            <TextView
                android:id="@+id/tieude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="  Các tiện nghi khác"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/cactiengnhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="#DDDDDD"
                android:padding="10dp">

                <!-- More Details -->
                <TextView
                    android:id="@+id/tiennghi"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="- Hệ thống 6 túi khí"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Điều kiện thuê xe -->
            <TextView
                android:id="@+id/dieukien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="  Điều kiện thuê xe"
                android:textColor="#444444"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/thongtincan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="#DDDDDD"
                android:padding="10dp">

                <!-- More Details -->
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Thông tin cần có khi nhận xe"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="- CCCD hoặc Hộ chiếu còn thời hạn"
                    android:textColor="#444444"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="- Bằng lái hợp lệ, có thời hạn"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Hình thức thanh toán -->
            <LinearLayout
                android:id="@+id/hinhthucthanhtoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="#DDDDDD"
                android:padding="10dp">

                <!-- More Details -->
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Hình thức thanh toán"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="- Trả trước"
                    android:textColor="#444444"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="- Thời hạn thah toán: đặt cọc giữ xe thanh toán 100% khi kí hợp đồng và nhận xe"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chinhsachdatcoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="#DDDDDD"
                android:padding="10dp">

                <!-- More Details -->
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Chính sách đặt cọc (thế chân)"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="- Khách hàng phải thanh toán 100% số tiền cọc 10.000.000đ tại thời điểm đặt xe"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/bookButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ĐẶT XE"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00bcd4"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />
</LinearLayout>
