<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/btthoat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/muiten" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Chi tiết đơn hàng"
            android:layout_marginLeft="50dp"
            android:textColor="#FF7F00"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#00bcd4"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="40dp"
                        android:padding="4dp"
                        android:text="  Mã đơn hàng: "
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/goihang"/>
                    <TextView
                        android:id="@+id/madon"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="4dp"
                        android:text="1234"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/trangthai"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="4dp"
                    android:text="Chờ xử lý"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/bogoc1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="4dp"
                    android:text="THÔNG TIN NGƯỜI THUÊ"
                    android:textColor="#00CC33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/human"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Họ và tên:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Minh Thắng"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Số điện thoại:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/sdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="0987654321"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Email:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="mt@gmail.com"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="4dp"
                    android:text="THÔNG TIN ĐƠN HÀNG"
                    android:textColor="#00CC33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/list"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Hình thức thuê:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/hinhthuc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Thuê theo ngày"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Dòng xe:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/dongxe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="VinFast"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Biển số:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/bienso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="29A-...."
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Địa chỉ nhận xe:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/diachi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Hà Nội"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Thời gian nhận xe:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tgnhanxe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="09:00 10/11/2024"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="  Thời gian trả xe:"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tgtraxe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="09:00 11/11/2024"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="4dp"
                    android:text="THÔNG TIN THANH TOÁN"
                    android:textColor="#00CC33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/tien"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#33CC66">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=" Loại"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Đơn giá"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Số lượng"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Tổng"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=" Phí thuê xe"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/giaxe"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="800.000 đ"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/soluong"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tongphi"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="800.000 đ"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=" Tiền cọc"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/tiencoc"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="10.000.000 VNĐ"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tongcoc"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="10.000.000 VNĐ"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=" Phí GTGT"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="50.000 VNĐ"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="50.000 VNĐ"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#33CC66">
                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=" Tổng chi phí"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tongtien"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="850.000 đ"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
