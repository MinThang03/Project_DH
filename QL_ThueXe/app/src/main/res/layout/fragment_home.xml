<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home"
    android:background="@drawable/nenhome2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:id="@+id/profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/bogoc2"
            android:backgroundTint="#ffffff"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_personal_injury_24"
                android:contentDescription="Profile Image" />

            <TextView
                android:id="@+id/Tenkhach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Họ và tên"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Nội dung chính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/bogoc3"
            android:backgroundTint="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp">

            <!-- TabLayout for "Thuê ngày" và "Thuê tháng" -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/TabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/selector"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextColor="@android:color/black"
                app:tabIndicatorColor="#ff0000"></com.google.android.material.tabs.TabLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tỉnh/Thành phố:"
                android:textSize="14sp"
                android:layout_marginTop="12dp"/>

            <Spinner
                android:id="@+id/spinner_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bogoc3"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/location_city_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày nhận xe:"
                android:textSize="14dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittext_pickup_date1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="26/10/2024"
                    android:background="@drawable/bogoc3"
                    android:drawableEnd="@drawable/calendar_month_24"
                    android:inputType="date"
                    android:padding="12dp"
                    android:layout_marginStart="10dp"/>

                <EditText
                    android:id="@+id/edittext_pickup_time1"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:hint="19:10"
                    android:background="@drawable/bogoc3"
                    android:drawableEnd="@drawable/av_timer_24"
                    android:inputType="time"
                    android:padding="12dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày trả xe:"
                android:textSize="14dp"></TextView>

            <!-- Ngày trả xe -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittext_return_date2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="25/11/2024"
                    android:background="@drawable/bogoc3"
                    android:drawableEnd="@drawable/calendar_month_24"
                    android:inputType="date"
                    android:padding="12dp"
                    android:layout_marginStart="10dp"/>

                <EditText
                    android:id="@+id/edittext_return_time2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:hint="19:10"
                    android:background="@drawable/bogoc3"
                    android:drawableEnd="@drawable/av_timer_24"
                    android:inputType="time"
                    android:padding="12dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm xe"
                android:backgroundTint="#00BCD4"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/view1"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"></ImageView>
    </LinearLayout>

</FrameLayout>