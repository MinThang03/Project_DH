<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Toolbar with back button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btthoat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/muiten"
                android:backgroundTint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Thông tin GPLX"
                android:textColor="#FF7F00"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ScrollView for the main content to scroll when keyboard appears -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <!-- Each field with label and input -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ảnh mặt trước GPLX"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hình chụp cần thấy được Ảnh đại diện và Số GPLX"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/avtImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_9" />

                <!-- License number input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số giấy phép lái xe"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp" />

                <EditText
                    android:id="@+id/sogplx"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bogoc3"
                    android:padding="4dp"
                    android:hint="0000-0000-0000"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <!-- Class input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hạng bằng"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp" />

                <Spinner
                    android:id="@+id/hang"
                    android:background="@drawable/bogoc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Registration place input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nơi đăng kí"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp" />

                <EditText
                    android:id="@+id/noidk"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bogoc3"
                    android:padding="4dp"
                    android:hint="Nơi đăng kí"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <!-- Expiry date input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày hết hạn"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp" />

                <EditText
                    android:id="@+id/ngayhethan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bogoc3"
                    android:padding="4dp"
                    android:hint="đ/mm/yy"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btcapnhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật thông tin"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00bcd4"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</FrameLayout>
