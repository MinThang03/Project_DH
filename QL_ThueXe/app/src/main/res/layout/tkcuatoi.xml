<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/btthoat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/muiten"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Tài khoản của tôi"
            android:layout_marginLeft="60dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avtImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_9" />

            <TextView
                android:id="@+id/hoten"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="#BBBBBB"
                android:padding="4dp"
                android:text="Họ và tên"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tgthamgia"
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#BBBBBB"
                android:padding="4dp"
                android:text="Ngày tham gia: 08/11/2024"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="14sp" />

            <!-- Nhập thông tin -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:padding="4dp"
                android:text="  Thay đổi thông tin cá nhân"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#ffffff"
                android:padding="4dp"
                android:text="  Họ và tên"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nhapten"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bogoc3"
                android:padding="4dp"
                android:hint="  Họ và tên"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Nhập ngày sinh -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:padding="4dp"
                android:text="  Ngày sinh"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nhapngaysinh"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bogoc3"
                android:padding="4dp"
                android:hint=" Ngày sinh"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Nhập Số điện thoại -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:padding="4dp"
                android:text="  Số điện thoại"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nhapsdt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bogoc3"
                android:padding="4dp"
                android:hint="  Số điện thoại"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Nhập Email -->
            <TextView
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:padding="4dp"
                android:text="  Email *"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nhapemail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bogoc3"
                android:padding="4dp"
                android:hint="  Địa chỉ Email"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btcapnhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Cập nhật thông tin"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00bcd4"
        android:layout_gravity="bottom" />

</FrameLayout>
