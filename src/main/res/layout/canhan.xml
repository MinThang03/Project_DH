<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin của tôi"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"/>

        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Information List Section -->
    <LinearLayout
        android:id="@+id/infoListLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tkcuatoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản của tôi"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:drawableLeft="@drawable/human"
            android:background="@drawable/bogoc4"
            android:drawableRight="@drawable/muiten2"/>

        <TextView
            android:id="@+id/gplx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giấy phép lái xe"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/paper"
            android:background="@drawable/bogoc4"
            android:drawableRight="@drawable/muiten2"/>


        <TextView
            android:id="@+id/diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ của tôi"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/home"
            android:background="@drawable/bogoc4"
            android:drawableRight="@drawable/muiten2"/>
    </LinearLayout>

    <!-- Account Settings Section -->
    <LinearLayout
        android:id="@+id/settingsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/infoListLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/doimk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/pass"
            android:background="@drawable/bogoc4"
            android:drawableRight="@drawable/muiten2"/>

        <TextView
            android:id="@+id/xoatk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yêu cầu xóa tài khoản"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/delete2"
            android:background="@drawable/bogoc4"
            android:drawableRight="@drawable/muiten2"/>
    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/dangxuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textColor="#000000"
        android:backgroundTint="#33CC66"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/settingsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
